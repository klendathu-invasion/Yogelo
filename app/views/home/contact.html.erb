<section class="contact-hero">
    <div class="container">
        <h1 class="contact-hero__title">Contactez-moi</h1>
        <p class="contact-hero__subtitle">Vous avez des questions ou souhaitez réserver un cours ? N'hésitez pas à me contacter !</p>
    </div>
</section>

<section class="contact-main">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-form">
                <h2 class="section-title">Envoyez-moi un message</h2>
                
                <form action="/contact-process" method="POST" id="contact-form" class="form">
                    <div class="honeypot-field" style="display: none;">
                      <label for="website">Site web (ne pas remplir)</label>
                      <input type="text" name="website" id="website" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" id="name" name="name" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone" class="form-label">Téléphone (optionnel)</label>
                        <input type="tel" id="phone" name="phone" class="form-input">
                    </div>
                    
                    <div class="form-group">
                        <label for="subject" class="form-label">Sujet</label>
                        <select id="subject" name="subject" class="form-select">
                            <option value="information">Demande d'information</option>
                            <option value="reservation">Réservation de cours</option>
                            <option value="private">Cours privé</option>
                            <option value="other">Autre</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="message" class="form-label">Message</label>
                        <textarea id="message" name="message" class="form-textarea" rows="5" required></textarea>
                    </div>
                    
                    <div class="form-group form-policy">
                        <input type="checkbox" id="policy" name="policy" class="form-checkbox" required>
                        <label for="policy" class="form-checkbox-label">J'accepte que mes données soient traitées pour me recontacter</label>
                    </div>
                    
                    <div class="form-submit">
                        <button type="submit" class="btn btn--full">Envoyer</button>
                    </div>
                </form>
            </div>
            
            <div class="contact-info">
                <h2 class="section-title">Mes informations</h2>
                
                <div class="info-card">
                    <div class="info-item">
                        <div class="info-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h3 class="info-title">Téléphone</h3>
                            <p class="info-text"><a href="tel:+33662891808">06.62.89.18.08</a></p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="2" y="4" width="20" height="16" rx="2" ry="2"></rect>
                                <path d="M22 7 L12 13 L2 7"></path>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h3 class="info-title">Email</h3>
                            <p class="info-text"><a href="mailto:contact@elo-yoga.fr">contact@elo-yoga.fr</a></p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h3 class="info-title">Adresse</h3>
                            <p class="info-text">Studio Love Yoga<br>31000 Toulouse<br>Secteur Limayrac</p>
                        </div>
                    </div>
                    
                    <div class="social-links">
                        <h3 class="info-title">Réseaux sociaux</h3>
                        <div class="social-icons">
                            <a href="https://www.facebook.com/elo.lebulot/" class="social-link" aria-label="Facebook" target="_blank">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M22 12C22 6.477 17.523 2 12 2S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.877v-6.988h-2.54v-2.889h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562v1.875h2.773l-.443 2.889h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
                                </svg>
                            </a>
                            <a href="https://www.instagram.com/elodie_sirignano/" class="social-link" aria-label="Instagram" target="_blank">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                                  <line x1="17.5" y1="6.5" x2="17.5" y2="6.5"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="schedule-info">
                    <h3 class="info-title">Horaires</h3>
                    <ul class="schedule-list">
                        <li><span class="day">Mercredi</span><span class="time">12h - 13h15</span></li>
                        <li><span class="day">Dimanche</span><span class="time">10h - 11h15</span></li>
                    </ul>
                    <p class="schedule-note">Cours privés ou cours en entreprise sur demande</p>
                </div>
            </div>
        </div>
    </div>
</section>

